        document.addEventListener("DOMContentLoaded", () => {
            const contents = document.querySelectorAll("#dynamic .content");
            let currentIndex = 0;

            const updateContent = () => {
                // Get the current and next content
                const currentContent = contents[currentIndex];
                currentIndex = (currentIndex + 1) % contents.length;
                const nextContent = contents[currentIndex];

                // Animate the current content to slide up and vanish
                currentContent.classList.remove("active");
                currentContent.classList.add("exiting");

                // Wait for the current content to finish its transition
                setTimeout(() => {
                    // Reset the current content
                    currentContent.classList.remove("exiting");

                    // Animate the next content to slide in from below
                    nextContent.classList.add("active");
                }, 800); // Match the duration in the CSS transition
            };

            // Initialize the first content as active
            contents[currentIndex].classList.add("active");

            // Cycle through the contents every 3 seconds, ensuring full transitions
            setInterval(updateContent, 3000);
        });


